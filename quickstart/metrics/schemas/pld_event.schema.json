{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pld.dev/schema/pld_event.schema.json",
  "title": "PLD Applied Runtime Event",
  "description": "Canonical event schema for PLD (Phase Loop Dynamics) runtime logging and metrics aggregation.",
  "type": "object",
  "additionalProperties": false,
  "required": [ "event_id", "timestamp", "session_id", "turn_id", "event_type", "pld" ],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "session_id": { "type": "string" },
    "turn_id": { "type": ["string", "integer"] },
    "event_type": {
      "type": "string",
      "enum": [ "drift_detected", "repair_triggered", "reentry_observed", "outcome", "failover_triggered", "info", "metric", "system" ]
    },
    "source": { "type": "string", "enum": ["user", "system", "assistant", "tool", "controller", "runtime"] },
    "pld": {
      "type": "object",
      "required": ["phase", "code"],
      "properties": {
        "phase": { "type": "string", "enum": [ "none", "drift", "repair", "reentry", "continue", "failover", "complete", "outcome" ] },
        "code": {
          "type": "string",
          "pattern": "^(D[0-9]|R[0-9]|RE[0-9]+|F[0-9]+|O[0-9]+|OUT[0-9]+|NONE)([_A-Za-z0-9-]*)?$",
          "description": "Canonical code (e.g., D5_information, R2_soft_repair)."
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "metadata": { "type": "object", "additionalProperties": true }
      },
      "additionalProperties": false
    },
    "payload": { "type": "object", "additionalProperties": true },
    "runtime": { "type": "object", "additionalProperties": true },
    "metrics": { "type": "object", "additionalProperties": true },
    "tags": { "type": "array", "items": { "type": "string" } }
  }
}
